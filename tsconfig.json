{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "./build",
        "allowJs": false,
        "jsx": "react",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["reflect-metadata"],
        "lib": ["es6"],
        "baseUrl": ".",
        "paths": {
            "~/*":["build/*"]
        }
    },
    "exclude": ["./node_modules/"]
}